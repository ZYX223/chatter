<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dip">

    <TextView
        android:id="@+id/tv_name_text"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_above="@+id/tv_password_text"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-178dp"
        android:gravity="center_vertical|right"
        android:text="用户名："
        android:textSize="16sp" />

    <EditText android:id="@+id/et_name"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_toRightOf="@id/tv_name_text"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_name_text"
        android:hint="请输入用户名，如Zyx"
        android:inputType="textPersonName"
        android:paddingLeft="20dip"/>

    <TextView
        android:id="@+id/tv_password_text"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="178dp"
        android:gravity="center_vertical|right"
        android:text="密码："
        android:textSize="16sp" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="298dp"
        android:layout_height="40dip"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tv_password_text"
        android:layout_marginStart="81dp"
        android:hint="请输入密码"
        android:inputType="number"
        android:maxLength="3"
        android:paddingLeft="20dip" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_clear"
        android:layout_marginEnd="66dp"
        android:onClick="Login"
        android:text="登录"></Button>

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:layout_toEndOf="@+id/tv_name_text"
        android:onClick="clearUIData"
        android:text="重置"></Button>

</RelativeLayout>